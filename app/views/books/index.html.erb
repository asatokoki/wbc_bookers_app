
  <h1>Books</h1>
  <div class="tabele">
    <div class="thead">
      <th>タイトル</th>
      <th>ボディー</th>
      <th></th>
    
  </div>
  <% @books.each do |book| %>

  
    
    <div class="title"><%= link_to book.title, book_path(book)%></div>
    <div class="body"><%= link_to book.body, book_path(book)%></div>
    <div class="show"><%= link_to "Show",book_path(book)%></div>
    <div class="edit"><%= link_to "Edit",edit_book_path(book)%></div>

    <div class="destroy"><%= link_to "Destroy",book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></div>
  

  <% end %>

  <h1>New Book</h1>
<% if @book.errors.any? %>
  <div class = "alert">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
       <h1>error</h1>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>



