
<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class = "alert">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
       <h1>error</h1>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @book,  local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>

  <div class="show,Back">
  <%= link_to "Show", book_path(@book.id)%>

  <%= link_to "Back", books_path%>
  </div>
<% end %>